<%- include('partials/header') %>

    <div class="container my-5">
        <h1 class="text-center mb-4 text-primary"><i class="fas fa-ticket-alt me-2"></i> My Dashboard</h1>

        <div class="row">
            <div class="col-md-3">
                <div class="card shadow-sm mb-4">
                    <div class="card-body text-center">
                        <i class="fas fa-user-circle fa-4x mb-3 text-secondary"></i>
                        <h4>
                            <%= user.name %>
                        </h4>
                        <p class="text-muted">
                            <%= user.email %>
                        </p>
                        <hr>
                        <div class="d-grid">
                            <a href="/auth/logout" class="btn btn-outline-danger">Logout</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Booking History</h5>
                    </div>
                    <div class="card-body">
                        <% if (bookings.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>PNR</th>
                                            <th>Route</th>
                                            <th>Date</th>
                                            <th>Seats</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bookings.forEach(booking=> { %>
                                            <tr>
                                                <td class="fw-bold">
                                                    <%= booking.pnr %>
                                                </td>
                                                <td>
                                                    <%= booking.from_station %> <i
                                                            class="fas fa-arrow-right small mx-1"></i>
                                                        <%= booking.to_station %>
                                                </td>
                                                <td>
                                                    <%= booking.journey_date %>
                                                </td>
                                                <td>
                                                    <%= booking.seats %>
                                                </td>
                                                <td><span class="badge bg-success">
                                                        <%= booking.status %>
                                                    </span></td>
                                                <td>
                                                    <a href="/booking/confirmation?pnr=<%= booking.pnr %>"
                                                        class="btn btn-sm btn-info icon-link" title="View Ticket">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <div class="alert alert-info text-center">
                                    You haven't booked any tickets yet. <a href="/" class="alert-link">Book Now!</a>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>