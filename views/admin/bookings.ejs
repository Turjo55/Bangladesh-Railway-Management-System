<%- include('../partials/header') %>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse shadow-sm">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/admin/dashboard"><i
                                    class="fas fa-home me-2"></i> Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/admin/bookings"><i
                                    class="fas fa-ticket-alt me-2"></i> Booking Manager</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/routes"><i class="fas fa-route me-2"></i>
                                Train Route Manager</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="fas fa-users me-2"></i>
                                User Manager</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/reports"><i
                                    class="fas fa-chart-line me-2"></i> Reports</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/settings"><i class="fas fa-cog me-2"></i>
                                Settings</a></li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 my-4">
                <h2 class="mb-4">Booking Manager</h2>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th>PNR</th>
                                        <th>Passenger</th>
                                        <th>Train Info</th>
                                        <th>Journey</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Payment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (bookings && bookings.length> 0) { %>
                                        <% bookings.forEach(booking=> { %>
                                            <tr>
                                                <td class="fw-bold">
                                                    <%= booking.pnr %>
                                                </td>
                                                <td>
                                                    <% if (booking.user_id) { %>
                                                        <div class="fw-bold">
                                                            <%= booking.user_id.name %>
                                                        </div>
                                                        <small class="text-muted">
                                                            <%= booking.user_id.email %>
                                                        </small>
                                                        <% } else { %>
                                                            <span class="text-muted">Unknown User</span>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <div class="fw-bold">
                                                        <%= booking.train_name %>
                                                    </div>
                                                    <small>
                                                        <%= booking.train_code %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div>
                                                        <%= booking.from_station %> <i
                                                                class="fas fa-arrow-right text-muted mx-1"></i>
                                                            <%= booking.to_station %>
                                                    </div>
                                                    <small class="text-muted">
                                                        <%= booking.journey_date %>
                                                    </small>
                                                </td>
                                                <td>à§³ <%= booking.total_amount %>
                                                </td>
                                                <td>
                                                    <span
                                                        class="badge rounded-pill bg-<%= booking.status === 'Confirmed' ? 'success' : 'warning' %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span
                                                        class="badge rounded-pill bg-<%= booking.payment_status === 'Paid' ? 'success' : 'danger' %>">
                                                        <%= booking.payment_status %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="7" class="text-center text-muted py-4">No bookings
                                                            found.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <%- include('../partials/footer') %>